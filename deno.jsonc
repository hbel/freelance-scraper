{
    "tasks": {
      "start": "deno run -A src/scraper.ts",
      "dev": "deno run --watch --allow-net src/scraper.ts"
    },
    "fmt": {
      "options": {
        "indentWidth": 4,
        "lineWidth": 100,
        "singleQuote": false
      }
    },
    "compilerOptions": {
      "strict": true
    },
    "imports": {
      "deno_dom": "https://deno.land/x/deno_dom@v0.1.49/deno-dom-wasm.ts",
      "base64": "https://deno.land/std/encoding/base64.ts",
      "nodemailer": "npm:nodemailer@6.9.16",
      "dotenv": "https://deno.land/std/dotenv/mod.ts",
      "yaml": "https://deno.land/std/yaml/mod.ts"
    },
    "lint": {
      "rules": {
        "tags": ["recommended"]
      }
    }
  }